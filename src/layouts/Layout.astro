---
interface Props {
  title?: string;
}

const { title = 'JSON â†” TOON Converter' } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Convert between JSON and TOON (Token-Oriented Object Notation) - an efficient format for LLMs. 100% client-side, your data never leaves your browser." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/json-to-toon/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&family=JetBrains+Mono:wght@100..800&display=swap" rel="stylesheet">
    <script>
      // Initialize dark mode as default
      (function() {
        const saved = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (saved === 'light') {
          document.documentElement.classList.remove('dark');
        } else if (saved === 'dark' || !saved) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="selection:bg-amber-400 dark:selection:bg-amber-500 selection:text-black">
    <div class="fixed inset-0 -z-10 h-full w-full bg-gradient-to-br from-white via-neutral-50 to-blue-50/30 dark:bg-gradient-to-br dark:from-neutral-950 dark:via-black dark:to-neutral-950">
      <!-- Base grid pattern - bold and structured -->
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#000_1px,transparent_1px),linear-gradient(to_bottom,#000_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#1a1a1a_1px,transparent_1px),linear-gradient(to_bottom,#1a1a1a_1px,transparent_1px)] [background-size:32px_32px] opacity-30 dark:opacity-30"></div>

      <!-- Secondary fine grid overlay -->
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#000_0.5px,transparent_0.5px),linear-gradient(to_bottom,#000_0.5px,transparent_0.5px)] dark:bg-[linear-gradient(to_right,#2a2a2a_0.5px,transparent_0.5px),linear-gradient(to_bottom,#2a2a2a_0.5px,transparent_0.5px)] [background-size:8px_8px] opacity-15 dark:opacity-20"></div>

      <!-- Bold diagonal lines with vibrant colors -->
      <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
        <!-- Primary amber diagonal - more vibrant in light mode -->
        <div class="absolute top-0 -left-40 w-[900px] h-[4px] bg-gradient-to-r from-transparent via-amber-400/70 to-transparent dark:via-amber-500/40 rotate-12 blur-[1.5px]"></div>
        <div class="absolute top-0 -left-40 w-[900px] h-[2px] bg-gradient-to-r from-transparent via-amber-500 to-transparent dark:via-amber-500 rotate-12"></div>

        <!-- Secondary blue diagonal -->
        <div class="absolute top-1/3 right-0 w-[700px] h-[3px] bg-gradient-to-l from-transparent via-blue-500/60 to-transparent dark:via-blue-500/30 rotate-[-15deg] blur-[1px]"></div>
        <div class="absolute top-1/3 right-0 w-[700px] h-[2px] bg-gradient-to-l from-transparent via-blue-600 to-transparent dark:via-blue-500 rotate-[-15deg]"></div>

        <!-- Tertiary red accent -->
        <div class="absolute bottom-1/4 left-1/3 w-[800px] h-[3px] bg-gradient-to-r from-transparent via-red-500/50 to-transparent dark:via-red-500/25 rotate-[8deg] blur-[1px]"></div>
        <div class="absolute bottom-1/4 left-1/3 w-[800px] h-[1px] bg-gradient-to-r from-transparent via-red-600 to-transparent dark:via-red-500 rotate-[8deg]"></div>
      </div>

      <!-- Bold geometric shapes - more prominent in light mode -->
      <div class="absolute top-16 right-16 w-96 h-96 border-4 border-amber-400/30 dark:border-amber-500/20 rotate-45 shadow-[0_0_60px_rgba(251,191,36,0.15)] dark:shadow-[0_0_60px_rgba(251,191,36,0.15)]"></div>
      <div class="absolute top-16 right-16 w-96 h-96 border-2 border-amber-500/20 dark:border-amber-500/15 rotate-45 -translate-x-6 -translate-y-6"></div>
      <div class="absolute top-16 right-16 w-96 h-96 border border-amber-600/15 dark:border-amber-500/10 rotate-45 -translate-x-12 -translate-y-12"></div>

      <div class="absolute bottom-24 left-24 w-56 h-56 border-4 border-blue-500/30 dark:border-blue-500/20 rotate-12 shadow-[0_0_50px_rgba(59,130,246,0.15)] dark:shadow-[0_0_50px_rgba(59,130,246,0.15)]"></div>
      <div class="absolute bottom-24 left-24 w-56 h-56 border-2 border-blue-600/20 dark:border-blue-500/15 rotate-12 translate-x-3 translate-y-3"></div>
      <div class="absolute bottom-24 left-24 w-56 h-56 border border-blue-700/15 dark:border-blue-500/10 rotate-12 translate-x-6 translate-y-6"></div>

      <!-- Medium accent squares -->
      <div class="absolute top-1/2 left-1/4 w-32 h-32 border-[3px] border-amber-500/25 dark:border-amber-500/25 rotate-45 shadow-[0_0_30px_rgba(251,191,36,0.1)] dark:shadow-[0_0_30px_rgba(251,191,36,0.1)]"></div>
      <div class="absolute top-1/3 right-1/3 w-24 h-24 border-[3px] border-blue-500/25 dark:border-blue-500/25 rotate-12 shadow-[0_0_25px_rgba(59,130,246,0.1)] dark:shadow-[0_0_25px_rgba(59,130,246,0.1)]"></div>
      <div class="absolute bottom-1/3 right-1/4 w-20 h-20 border-2 border-red-500/20 dark:border-red-500/20 rotate-45"></div>

      <!-- Radial gradient overlays - more colorful in light mode -->
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_left,_rgba(251,191,36,0.12),_transparent_60%)] dark:bg-[radial-gradient(ellipse_at_top_left,_rgba(251,191,36,0.12),_transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_right,_rgba(59,130,246,0.1),_transparent_60%)] dark:bg-[radial-gradient(ellipse_at_bottom_right,_rgba(59,130,246,0.1),_transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_rgba(239,68,68,0.05),_transparent_70%)] dark:bg-[radial-gradient(ellipse_at_center,_rgba(239,68,68,0.03),_transparent_70%)]"></div>

      <!-- Subtle noise texture overlay -->
      <div class="absolute inset-0 opacity-[0.015] dark:opacity-[0.03] bg-[url('data:image/svg+xml;base64,')]"></div>

      <!-- Scanline effect - subtle in light mode -->
      <div class="absolute inset-0 bg-[repeating-linear-gradient(0deg,_transparent_0px,_rgba(0,0,0,0.015)_1px,_transparent_2px)] dark:bg-[repeating-linear-gradient(0deg,_transparent_0px,_rgba(255,255,255,0.02)_1px,_transparent_2px)] pointer-events-none"></div>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Bricolage Grotesque', system-ui, sans-serif;
    font-feature-settings: "kern" 1, "liga" 1;
  }

  code, pre, .font-mono {
    font-family: 'JetBrains Mono', monospace;
    font-feature-settings: "liga" 1, "calt" 1;
  }

  body {
    margin: 0;
    min-height: 100vh;
    transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-x: hidden;
    letter-spacing: -0.01em;
  }
</style>
